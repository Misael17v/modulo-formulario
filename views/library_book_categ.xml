<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='libreria_libro_categoria_action' model='ir.actions.act_window'>
        <field name="name">Libro Categoria</field>
        <field name="res_model">libreria.libro.categoria</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Libro Categorias" id="libreria_libro_categoria_menu" parent="libreria_base_menu" action="libreria_libro_categoria_action"/>

    <!-- Formulario vista-->
    <record id="Libreria_libro_categoria_view_form" model="ir.ui.view">
        <field name="name">Libreria Categorias Form</field>
        <field name="model">libreria.libro.categoria</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                    <group>
                        <field name="child_ids"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

       <!-- Tree(list) View -->
       <record id="libreria_libro_categoria_view_tree" model="ir.ui.view">
        <field name="name">Lista de libreria de libros</field>
        <field name="model">libreria.libro.categoria</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>